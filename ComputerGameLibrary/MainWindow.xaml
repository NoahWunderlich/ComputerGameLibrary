<Window x:Class="ComputerGameLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGameLibrary"
        mc:Ignorable="d"
        Title="GameList" Height="450" Width="800">
    <Grid Background="LightGray" >

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Label Content="HEADER" Grid.Row="0"/>
        <WrapPanel Grid.Row="1">
                <Label Content="Genre"/>
                <ComboBox x:Name="Genre"/>
                <Label Content="Platform"/>
                <ComboBox x:Name="Platform"/>
                <Label Content="Contains"/>
                <TextBox Width="100" />
                <Button Content="Apply filter" Click="OnClickAllDataButton"/>

            </WrapPanel>
        <DataGrid Name="DataGridAll" AutoGenerateColumns="False" Grid.Row="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"  Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform}" />
                <DataGridTextColumn Header="Release Date" Binding="{Binding ReleaseDate}" />
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" />

            </DataGrid.Columns>
        </DataGrid>
    
    </Grid>
</Window>
