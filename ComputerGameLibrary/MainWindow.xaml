<Window x:Class="ComputerGameLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGameLibrary"
        mc:Ignorable="d"
        Title="GameList" Height="450" Width="800">
    <Grid Background="black" >

        <TabControl TabStripPlacement="Left" Background="LightGray" BorderBrush="Black" BorderThickness="2">
            <TabItem Header="Allgemeine &#x0a;Liste" Height="100" Background="DarkGray" BorderBrush="Black">
                
                <StackPanel>
                    <WrapPanel>
                        <Label Content="Genre"/>
                        <ComboBox x:Name="Genre"/>
                        <Label Content="Platform"/>
                        <ComboBox x:Name="Platform"/>
                        <Label Content="Online"/>
                        <CheckBox x:Name="OnlineCheckBox"/>
                    </WrapPanel>
                   
                    <TextBlock x:Name="testbox1"/>
                    <TextBlock x:Name="testbox2"/>
                    <TextBlock x:Name="testbox3"/>
                    <TextBlock x:Name="testbox4"/>
                    <TextBlock x:Name="testbox5"/>

                    <ListBox x:Name="ListBoxAll"   Height="300" Margin="5" Background="LightGray">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                    <Run Text="Name = "/>
                    <Run Text="{Binding Path=Name}" /><LineBreak/>
                    <Run Text="Platform = "/>
                    <Run Text="{Binding Path=Platform}" /><LineBreak/>
                    <Run Text="Genre = "/>
                    <Run Text="{Binding Path=Genre}" x:Name="FilePath" />
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>

            <TabItem Header="Eigene &#x0a;Liste            " Height="100" Background="DarkGray" BorderBrush="Black">
            </TabItem>
            <TabItem Header="Öffnen&#x0a;Exportieren " Height="100" Background="DarkGray" BorderBrush="Black">
            </TabItem>
            <TabItem Header="???" Height="100" Background="DarkGray" BorderBrush="Black">
            </TabItem>
        </TabControl>
      
        
        
    </Grid>
</Window>
